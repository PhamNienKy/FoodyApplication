<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/containerComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleUserImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="6.8"
            android:gravity="center"
            android:src="@drawable/bg_login"
            android:background="@drawable/background_cycle"
            android:textColor="@color/colorWhite"
            android:layout_margin="5dp"
            />

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCommentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tu Son House"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txtCommentContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To 2, Thon Tu Son, Binh Trung, Thang Binh, Quang Nam"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/txtCommentRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="6.6"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCommentImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>